// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Entry {
  id            Int                   @id @default(autoincrement())
  pid           String                @unique
  pageTitle     String                @default("")
  createdAt     DateTime              @default(now())
  updatedAt     DateTime              @updatedAt
  tags          Tag[]
  history       History[]
  latestHistory LatestHistoryOnEntry?

  @@index([pid], name: "pid")
}

model LatestHistoryOnEntry {
  id        Int     @id @default(autoincrement())
  entry     Entry   @relation(fields: [entryId], references: [id], onDelete: Cascade)
  entryId   Int     @unique
  history   History @relation(fields: [historyId], references: [id], onDelete: Cascade)
  historyId Int     @unique

  @@unique([entryId, historyId])
}

model History {
  id                   Int                    @id @default(autoincrement())
  entry                Entry                  @relation(fields: [entryPid], references: [pid], onDelete: Cascade)
  entryPid             String
  message              String                 @default("")
  source               String                 @db.Text
  revision             String
  createdAt            DateTime               @default(now())
  LatestHistoryOnEntry LatestHistoryOnEntry[]

  @@unique([entryPid, revision])
}

model Tag {
  id      Int     @id @default(autoincrement())
  tagName String  @unique
  entries Entry[]

  @@index([tagName], name: "tagName")
}
